{{#stores}}
    <div class="col-sm">
        <div class="list-group">
            <button type="button" class="list-group-item list-group-item-dark" disabled>
                <span class="fas fa-shopping-basket"></span> {{name}}
            </button>
            {{#opened}}
                {{#accessories}}
                    <button type="button" data-toggle="modal" data-target="#modalBuyAccessory" data-accessory_name="{{name}}" class="list-group-item list-group-item-secondary list-group-item-action d-flex justify-content-between align-items-center no-gutters accessory_btn">
                        {{name}}
                        <div>
        				    <span class="badge badge-info badge-pill">{{quality}}</span>
        				    <span class="badge badge-warning badge-pill">{{trick}}</span>
        				    <span class="badge badge-danger badge-pill">{{price}}</span>
                        </div>
                    </button>
                {{/accessories}}
            {{/opened}}
            {{#nextToOpen}}
                <button type="button" data-toggle="modal" data-target="#modalNextStep" class="list-group-item list-group-item-secondary list-group-item-action text-center">Abrir tienda</button>
            {{/nextToOpen}}
        </div>
    </div>
{{/stores}}
